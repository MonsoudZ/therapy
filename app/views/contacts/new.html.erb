<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-[#416970] mb-4">Contact Us</h1>

  <div class="mb-8 rounded-lg border border-[#416970]/20 bg-blue-50 p-4">
    <h2 class="text-xl font-semibold text-[#416970] mb-2">A Safe Place to Get Started.</h2>
    <p class="text-gray-700">It takes courage to take the first step. I offer a free, non-judgemental, confidential consultation for new clients.</p>
  </div>

  <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>
    
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :phone, "Phone (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.telephone_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :state, "State", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :state,
            options_for_select(us_states_options, params.dig(:contact, :state)),
            { include_blank: "Select a state" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>

    <div>
      <%= f.label :referral_source, "How did you hear about me?", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :referral_source, [["Google / Web search","google"],["Friend or Family","friend"],["Therapist Referral","therapist"],["Social Media","social"],["Other","other"]], {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>
    
    <div>
      <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :message, required: true, rows: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
    </div>
    
    <%= f.submit "Send Message", class: "w-full bg-[#416970] text-white py-2 px-4 rounded-md hover:bg-[#2d4a52] focus:outline-none focus:ring-2 focus:ring-[#416970] focus:ring-offset-2 transition-colors" %>
  <% end %>
</div>
