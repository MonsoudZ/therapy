<% content_for :page_title, "New Site Content" %>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Add New Site Content</h1>
  
  <%= form_with model: [:admin, @site_content], local: true, class: "space-y-6" do |form| %>
    <% if @site_content.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h2 class="text-red-800 font-medium mb-2">
          <%= pluralize(@site_content.errors.count, "error") %> prohibited this content from being saved:
        </h2>
        <ul class="text-red-700 text-sm">
          <% @site_content.errors.full_messages.each do |message| %>
            <li>â€¢ <%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :key, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :key, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none" %>
      <p class="text-sm text-gray-500 mt-1">Unique identifier for this content (e.g., "hero_title", "about_intro")</p>
    </div>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none" %>
    </div>

    <div>
      <%= form.label :content_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :content_type, 
          [["Text", "text"], ["HTML", "html"], ["Markdown", "markdown"]], 
          {}, 
          class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none" %>
    </div>

    <div>
      <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :content, rows: 10, 
          class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 focus:outline-none" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Create Content", 
          class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg" %>
      <%= link_to "Cancel", admin_site_contents_path, 
          class: "bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-2 rounded-lg" %>
    </div>
  <% end %>
</div>
