<% @faqs.each do |faq| %>
  <details class="group rounded-2xl border-2 border-gray-200 p-6 hover:border-gray-300 transition-colors bg-white">
    <summary class="cursor-pointer flex items-center gap-3">
      <svg class="w-5 h-5 text-black group-hover:text-[#416970] transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <h2 class="font-semibold text-lg text-black group-hover:text-[#416970] transition-colors">
        <%= faq[:question] %>
      </h2>
    </summary>
    <div class="mt-4 text-black leading-relaxed [&_a]:text-[#416970] [&_a]:hover:text-[#2d4a52] [&_a]:underline [&_a]:decoration-[#416970] [&_a]:hover:decoration-[#2d4a52] [&_a]:transition-colors [&_p]:mb-4 [&_p:last-child]:mb-0"><%= sanitize(faq[:answer], tags: %w[a p br strong em], attributes: %w[href target rel]) %></div>
  </details>
<% end %>