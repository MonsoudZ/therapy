<div class="group relative overflow-visible rounded-xl border border-gray-200 bg-white transition-all duration-200 hover:shadow-md hover:border-gray-300" data-controller="accordion">
  <button type="button" class="w-full text-left" data-action="click->accordion#toggle:stop">
    <div class="p-4">
      <div class="aspect-square w-full overflow-hidden rounded-lg bg-gray-50 p-px sm:p-[2px]">
        <%= service_icon_for(service, class: "w-full h-full object-cover") %>
      </div>
      <div class="mt-3 flex items-center justify-between gap-3">
        <h3 class="text-sm sm:text-base font-semibold text-gray-900 line-clamp-2 min-h-[2.25rem] flex-1"><%= service[:title] %></h3>
        <span class="inline-flex h-8 w-8 sm:h-9 sm:w-9 items-center justify-center rounded-full border border-[#416970] bg-[#E7F1F0] text-[#416970] text-base leading-none select-none group-hover:bg-[#d7e8e6]" data-accordion-target="icon">+</span>
      </div>
    </div>
  </button>
  <div class="px-4 pb-4 hidden" data-accordion-target="content">
    <div class="rounded-xl border-2 border-[#416970] p-4 sm:p-5 bg-blue-50 shadow">
      <p class="text-base sm:text-[15px] text-gray-700 leading-relaxed"><%= service[:description] %></p>
    </div>
  </div>
</div>
