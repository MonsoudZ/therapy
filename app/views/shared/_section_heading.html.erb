<%# 
  Usage: render "shared/section_heading", title: "My Services", size: :large
  Options: size can be :small, :medium, :large
%>
<%
  size_classes = {
    small: "text-2xl sm:text-3xl",
    medium: "text-3xl sm:text-4xl", 
    large: "text-4xl sm:text-5xl lg:text-6xl"
  }
  
  current_size = local_assigns[:size] || :medium
  classes = "font-bold mb-4 sm:mb-6 #{size_classes[current_size]}"
%>

<h1 class="<%= classes %>"><%= title %></h1>
