<% if notice.present? %>
  <div class="mb-6 rounded-xl border border-green-200 bg-green-50 px-4 py-3 text-green-800">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="mb-6 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-red-800">
    <%= alert %>
  </div>
<% end %>

<% if flash[:info].present? %>
  <div class="mb-6 rounded-xl border border-blue-200 bg-blue-50 px-4 py-3 text-blue-800">
    <%= flash[:info] %>
  </div>
<% end %>

<% if flash[:warning].present? %>
  <div class="mb-6 rounded-xl border border-yellow-200 bg-yellow-50 px-4 py-3 text-yellow-800">
    <%= flash[:warning] %>
  </div>
<% end %>
