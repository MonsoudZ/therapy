<% if notice.present? %>
  <div class="mb-6 rounded-xl border border-white/30 bg-white/10 px-4 py-3 text-white">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="mb-6 rounded-xl border border-white/30 bg-white/10 px-4 py-3 text-white">
    <%= alert %>
  </div>
<% end %>

<% if flash[:info].present? %>
  <div class="mb-6 rounded-xl border border-white/30 bg-white/10 px-4 py-3 text-white">
    <%= flash[:info] %>
  </div>
<% end %>

<% if flash[:warning].present? %>
  <div class="mb-6 rounded-xl border border-white/30 bg-white/10 px-4 py-3 text-white">
    <%= flash[:warning] %>
  </div>
<% end %>
