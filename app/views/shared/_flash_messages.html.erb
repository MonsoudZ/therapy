<% if notice.present? %>
  <div class="mb-6 rounded-xl border border-[#416970] bg-[#416970] px-4 py-3 text-white">
    <%= notice %>
  </div>
<% end %>

<% if alert.present? %>
  <div class="mb-6 rounded-xl border border-red-300 bg-red-50 px-4 py-3 text-red-700">
    <%= alert %>
  </div>
<% end %>

<% if flash[:info].present? %>
  <div class="mb-6 rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-black">
    <%= flash[:info] %>
  </div>
<% end %>

<% if flash[:warning].present? %>
  <div class="mb-6 rounded-xl border border-gray-200 bg-gray-50 px-4 py-3 text-black">
    <%= flash[:warning] %>
  </div>
<% end %>
