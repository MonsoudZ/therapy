<%# 
  Usage: render "shared/hero_section", title: "Individual + Relationship Therapy", subtitle: "Counseling for individuals and couples...", primary_button: {text: "Get Started", path: contact_path}, secondary_button: {text: "Learn More", path: about_path}
%>
<section class="py-8 sm:py-12 lg:py-20">
  <div class="max-w-4xl mx-auto text-center px-4">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 sm:mb-8">
      <%= sanitize(title, tags: %w[em strong br span], attributes: %w[class]) %>
    </h1>
    <p class="text-lg sm:text-xl text-gray-700 leading-relaxed mb-8 sm:mb-12 max-w-3xl mx-auto">
      <%= sanitize(subtitle, tags: %w[em strong br span], attributes: %w[class]) %>
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= cta_button primary_button[:text], primary_button[:path] %>
      <%= secondary_button secondary_button[:text], secondary_button[:path] %>
    </div>
  </div>
</section>
