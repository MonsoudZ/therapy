<!-- License logos section -->
<section class="py-8 sm:py-12 border-t border-[#9CAF88]">
  <div class="max-w-4xl mx-auto px-4">
    
    <div class="flex flex-row items-center justify-center gap-4 sm:gap-12">
      <!-- Psychology Today Logo -->
      <div class="flex items-center justify-center">
        <%= link_to "https://www.psychologytoday.com/us/therapists/angela-keeley-washington-dc/985248", 
                    target: "_blank", 
                    rel: "noopener noreferrer",
                    class: "group transition-opacity hover:opacity-80" do %>
          <%= image_tag "Psychology-Today.jpg",
              class: "h-24 sm:h-28 w-auto object-contain",
              width: 280,
              height: 100,
              loading: "lazy",
              alt: "Psychology Today Verified" %>
        <% end %>
      </div>

      <!-- Sexual Health Alliance Logo -->
      <div class="flex items-center justify-center">
        <div class="bg-white rounded-lg p-4 sm:p-5 shadow-sm border border-[#9CAF88]">
          <%= image_tag "SHA.jpg",
              class: "h-24 sm:h-28 w-auto object-contain",
              width: 280,
              height: 100,
              loading: "lazy",
              alt: "Sexual Health Alliance" %>
        </div>
      </div>
    </div>
  </div>
</section>
