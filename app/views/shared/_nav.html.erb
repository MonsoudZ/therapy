<header class="flex items-center justify-between py-3 sm:py-6">
  <%= link_to "Angela Keeley", root_path, class: "text-xl sm:text-2xl font-bold text-[#416970]" %>
  
  <!-- Mobile menu button -->
  <button class="sm:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors" onclick="toggleMobileMenu()">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
  
  <!-- Desktop navigation -->
  <nav class="hidden gap-6 lg:gap-8 sm:flex">
    <%= link_to "About", about_path, class: "text-sm md:text-base lg:text-lg font-medium hover:text-[#416970] transition-colors" %>
    <%= link_to "Services", services_path, class: "text-sm md:text-base lg:text-lg font-medium hover:text-[#416970] transition-colors" %>
    <%= link_to "FAQs", faqs_path, class: "text-sm md:text-base lg:text-lg font-medium hover:text-[#416970] transition-colors" %>
    <%= link_to "Contact", contact_path, class: "text-sm md:text-base lg:text-lg font-medium hover:text-[#416970] transition-colors" %>
  </nav>
  
  <!-- Desktop CTA button -->
  <div class="hidden sm:block ml-4">
    <%= link_to "Book a Free Consultation", contact_path, class: "rounded-xl px-4 lg:px-6 py-2 lg:py-3 text-white font-medium hover:opacity-90 transition-opacity text-xs md:text-sm lg:text-base", style: "background-color: #416970;" %>
  </div>
</header>

<!-- Mobile navigation menu -->
<div id="mobile-menu" class="hidden sm:hidden bg-white border-t">
  <nav class="flex flex-col space-y-4 p-6">
    <%= link_to "About", about_path, class: "text-lg font-medium hover:text-[#416970] transition-colors py-2" %>
    <%= link_to "Services", services_path, class: "text-lg font-medium hover:text-[#416970] transition-colors py-2" %>
    <%= link_to "FAQs", faqs_path, class: "text-lg font-medium hover:text-[#416970] transition-colors py-2" %>
    <%= link_to "Contact", contact_path, class: "text-lg font-medium hover:text-[#416970] transition-colors py-2" %>
    <div class="pt-4 border-t">
      <%= link_to "Book a Free Consultation", contact_path, class: "block w-full text-center rounded-xl px-6 py-3 text-white font-medium hover:opacity-90 transition-opacity", style: "background-color: #416970;" %>
    </div>
  </nav>
</div>

<script>
function toggleMobileMenu() {
  const menu = document.getElementById('mobile-menu');
  menu.classList.toggle('hidden');
}
</script>
