<% if local_assigns[:notice_message].present? %>
  <div class="mb-6 rounded-xl border border-[#416970] bg-[#416970] px-4 py-3 text-white">
    <%= notice_message %>
  </div>
<% end %>

<%= form_with model: contact, url: contact_path, method: :post, scope: :contact, data: { turbo: true }, class: "mx-auto w-full max-w-2xl" do |f| %>
  <!-- Header -->
  <div class="px-5 py-5 border-b border-gray-100">
    <h2 class="text-lg font-semibold text-gray-900">Get in touch</h2>
  </div>

  <!-- Body -->
  <div class="px-5 py-5 space-y-6">
    <!-- Name / Email -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :name, class: "block font-medium text-gray-900 mb-1" do %>
          Full Name<span class="text-red-500">*</span>
        <% end %>
        <% name_err = contact.errors[:name].present? %>
        <%= f.text_field :name,
                         required: true,
                         'aria-invalid': name_err,
                         'aria-describedby': (name_err ? 'contact-name-error' : nil),
                         class: "block w-full rounded-md border #{name_err ? 'border-red-400' : 'border-gray-300'} bg-white px-3 py-2 text-sm text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 #{name_err ? 'focus:ring-red-400' : 'focus:ring-[#416970]'} focus:border-transparent" %>
        <% if name_err %>
          <p id="contact-name-error" class="mt-1 text-sm text-red-600"><%= contact.errors[:name].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :email, class: "block font-medium text-gray-900 mb-1" do %>
          Email<span class="text-red-500">*</span>
        <% end %>
        <% email_err = contact.errors[:email].present? %>
        <%= f.email_field :email,
                          required: true,
                          'aria-invalid': email_err,
                          'aria-describedby': (email_err ? 'contact-email-error' : nil),
                          class: "block w-full rounded-md border #{email_err ? 'border-red-400' : 'border-gray-300'} bg-white px-3 py-2 text-sm text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 #{email_err ? 'focus:ring-red-400' : 'focus:ring-[#416970]'} focus:border-transparent" %>
        <% if email_err %>
          <p id="contact-email-error" class="mt-1 text-sm text-red-600"><%= contact.errors[:email].first %></p>
        <% end %>
      </div>
    </div>

    <!-- Phone / State -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :phone, "Phone", class: "block font-medium text-gray-900 mb-1" %>
        <%= f.telephone_field :phone,
                              inputmode: "numeric",
                              pattern: "\\d*",
                              maxlength: 15,
                              oninput: "this.value=this.value.replace(/\\D/g,'')",
                              class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-sm text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 focus:ring-[#416970] focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :state, class: "block font-medium text-gray-900 mb-1" do %>
          State<span class="text-red-500">*</span>
        <% end %>
        <% state_err = contact.errors[:state].present? %>
        <%= f.select :state,
                     options_for_select(us_states_options, contact.state),
                     { include_blank: "Select a state" },
                     required: true,
                     'aria-invalid': state_err,
                     'aria-describedby': (state_err ? 'contact-state-error' : nil),
                     class: "block w-full rounded-md border #{state_err ? 'border-red-400' : 'border-gray-300'} bg-white px-3 py-2 text-sm text-gray-900 shadow-sm focus:outline-none focus:ring-2 #{state_err ? 'focus:ring-red-400' : 'focus:ring-[#416970]'} focus:border-transparent" %>
        <% if state_err %>
          <p id="contact-state-error" class="mt-1 text-sm text-red-600"><%= contact.errors[:state].first %></p>
        <% end %>
      </div>
    </div>

    <!-- Message -->
    <div>
      <%= f.label :message, class: "block font-medium text-gray-900 mb-1" do %>
        How can I help?<span class="text-red-500">*</span>
      <% end %>
      <% message_err = contact.errors[:message].present? %>
      <%= f.text_area :message,
                      rows: 5,
                      required: true,
                      minlength: 10,
                      'aria-invalid': message_err,
                      'aria-describedby': (message_err ? 'contact-message-error' : nil),
                      class: "block w-full rounded-md border #{message_err ? 'border-red-400' : 'border-gray-300'} bg-white px-3 py-2 text-sm text-gray-900 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 #{message_err ? 'focus:ring-red-400' : 'focus:ring-[#416970]'} focus:border-transparent" %>
      <% if message_err %>
        <p id="contact-message-error" class="mt-1 text-sm text-red-600"><%= contact.errors[:message].first %></p>
      <% end %>
    </div>
  </div>

  <!-- Footer -->
  <div class="px-5 pt-2 pb-5">
    <%= f.submit "Send",
                 class: "inline-flex items-center justify-center rounded-xl bg-[#416970] px-6 py-3 text-sm font-medium text-white shadow hover:opacity-90 transition-opacity" %>
  </div>
<% end %>

