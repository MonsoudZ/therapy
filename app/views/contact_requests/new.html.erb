<div class="max-w-6xl mx-auto px-4">
  <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-start">
    <div class="order-2 lg:order-1">
      <h1 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6">Get in <em>touch</em>â€¦</h1>
          <p class="text-lg sm:text-xl text-gray-700 leading-relaxed mb-6 sm:mb-8"><%= site_content('contact_intro', "Please complete this form to schedule a free, 15-minute consultation.") %></p>
      
      <div class="flex justify-center lg:justify-start mb-6 sm:mb-8">
        <%= render "shared/professional_photo", size: "small", show_title: false, show_subtitle: false %>
      </div>
    </div>

    <div class="order-1 lg:order-2">
      <%= form_with model: @contact_request, class: "grid gap-4 sm:grid-cols-2" do |f| %>
  <div>
    <%= f.text_field :first_name, required: true, placeholder: "First Name *", class: form_field_classes %>
    <%= error_message_for(:first_name, @contact_request.errors) %>
  </div>
  <div>
    <%= f.text_field :last_name, required: true, placeholder: "Last Name *", class: form_field_classes %>
    <%= error_message_for(:last_name, @contact_request.errors) %>
  </div>
  <div class="sm:col-span-2">
    <%= f.email_field :email, required: true, placeholder: "Email *", class: form_field_classes %>
    <%= error_message_for(:email, @contact_request.errors) %>
  </div>
  <div>
    <%= f.telephone_field :phone, placeholder: "Phone", class: form_field_classes %>
  </div>
  <div>
    <%= f.select :state, us_states_options, { include_blank: "Select your state *" }, { required: true, class: form_field_classes } %>
    <%= error_message_for(:state, @contact_request.errors) %>
  </div>
  <div class="sm:col-span-2">
    <%= f.text_field :subject, required: true, placeholder: "Subject *", class: form_field_classes %>
    <%= error_message_for(:subject, @contact_request.errors) %>
  </div>
  <div class="sm:col-span-2">
    <%= f.text_area :message, required: true, placeholder: "Message *", class: "#{form_field_classes} min-h-32 resize-vertical" %>
    <%= error_message_for(:message, @contact_request.errors) %>
  </div>
  <div class="sm:col-span-2">
    <%= f.select :referral, referral_options, { include_blank: "How did you learn about my practice? *" }, class: form_field_classes %>
  </div>
      <div class="sm:col-span-2">
        <%= f.submit "Send", class: "w-full rounded-xl px-5 py-3 text-white font-medium text-base sm:w-auto", style: "background-color: #416970;" %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<%= render "shared/cta_bar" %>
